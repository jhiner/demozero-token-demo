  script.
    var webAuth = new auth0.WebAuth({
      domain:       '#{env.AUTH0_DOMAIN}',
      clientID:     '#{env.AUTH0_CLIENT_ID}',
      callbackURL:  '#{env.AUTH0_CALLBACK_URL}'
    });

    function signIn(organization) {
      webAuth.authorize({
        redirectUri: '#{env.AUTH0_CALLBACK_URL}',
        responseType: 'code',
        scope: '#{env.SCOPES}',
        organization
      });
    }

    function signInWithOrgId() {
      var organization = document.getElementById('organization_id').value;
      console.log(organization);
      webAuth.authorize({
        redirectUri: '#{env.AUTH0_CALLBACK_URL}',
        responseType: 'code',
        scope: '#{env.SCOPES}',
        organization,
        audience:" '#{env.AUDIENCE}"
      });
    }
